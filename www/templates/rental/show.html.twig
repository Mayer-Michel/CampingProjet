{% extends 'base.html.twig' %}

{% block title %}Rental
{% endblock %}

{% block body %}
	<div class="game-list-container">
		<h1>Rental</h1>

		<table class="game-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>NbrAdult</th>
					<th>NbrChildren</th>
					<th>DateStart</th>
					<th>DateEnd</th>
					<th>PrixTotal</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ rental.id }}</td>
					<td>{{ rental.nbrAdult }}</td>
					<td>{{ rental.nbrChildren }}</td>
					<td>{{ rental.dateStart ? rental.dateStart|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ rental.dateEnd ? rental.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ rental.prixTotal }}</td>
				</tr>
			</tbody>
		</table>
		<div class="action-buttons">
			<div>
				{# suppression #}
				{% include "rental/_delete_form.html.twig" with {'button_class': 'btn btn-delete'} %}
			</div>
			<div>
				<a href="{{ path('app_rental_edit' , {'id': rental.id}) }}" class="btn btn-edit">Editer</a>


			</div>
			<div>
				<a href="{{path('app_rental_index')}}" class="btn btn-back">

					<i class="fas fa-arrow-left"></i>Retour Ã  la liste</a>

			</div>

		</div>

	{% endblock %}
