{% extends 'base.html.twig' %}

{% block title %}Rental
{% endblock %}

{% block body %}
	<div class="game-list-container">
		{% include "components/_dashboard_button.html.twig" %}
		<h1>Rental</h1>

		<table class="game-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>NbrAdult</th>
					<th>NbrChildren</th>
					<th>DateStart</th>
					<th>DateEnd</th>
					<th>PrixTotal</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for rental in rentals %}
					<tr>
						<td>{{ rental.id }}</td>
						<td>{{ rental.nbrAdult }}</td>
						<td>{{ rental.nbrChildren }}</td>
						<td>{{ rental.dateStart ? rental.dateStart|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.dateEnd ? rental.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ rental.prixTotal }}</td>
						<td>
							<div class="game-actions">
								<a href="{{ path('app_rental_show', {'id': rental.id}) }}" class="view-link">show</a>
								<a href="{{ path('app_rental_edit', {'id': rental.id}) }}" class="edit-link">edit</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_rental_new') }}" class="add-game-btn">Create new</a>
	</div>
{% endblock %}
