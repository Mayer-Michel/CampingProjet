{% extends 'base.html.twig' %}

{% block title %}Saison
{% endblock %}

{% block body %}
	<div class="game-list-container">
		<h1>{{saison.label}}</h1>

		<table class="game-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>DateStart</th>
					<th>DateEnd</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ saison.id }}</td>
					<td>{{ saison.label }}</td>
					<td>{{ saison.dateStart ? saison.dateStart|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ saison.dateEnd ? saison.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
		<div class="action-buttons">
			<div>
				{# suppression #}
				{% include "saison/_delete_form.html.twig" with {'button_class': 'btn btn-delete'} %}
			</div>
			<div>
				<a href="{{ path('app_saison_edit' , {'id': saison.id}) }}" class="btn btn-edit">Editer</a>


			</div>
			<div>
				<a href="{{path('app_saison_index')}}" class="btn btn-back">

					<i class="fas fa-arrow-left"></i>Retour Ã  la liste</a>

			</div>

		</div>

	{% endblock %}
