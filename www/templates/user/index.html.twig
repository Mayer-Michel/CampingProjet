{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="game-list-container">
		{% include "components/_dashboard_button.html.twig" %}
    <h1>User</h1>

    <table class="game-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.username }}</td>
                <td>
                <div class="game-actions">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="view-link">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="edit-link">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="add-game-btn">Create new</a>
{% endblock %}
