{% extends 'base.html.twig' %}

{% block title %}Type
{% endblock %}

{% block body %}
	<div class="game-list-container">
		{% include "components/_dashboard_button.html.twig" %}
		<h1>Type</h1>

		<table class="game-table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Label</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for type in types %}
					<tr>
						<td>{{ type.id }}</td>
						<td>{{ type.label }}</td>
						<td>
							<div class="game-actions">
								<a href="{{ path('app_type_show', {'id': type.id}) }}" class="view-link">show</a>
								<a href="{{ path('app_type_edit', {'id': type.id}) }}" class="edit-link">edit</a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_type_new') }}" class="add-game-btn">Create new type</a>
	</div>
{% endblock %}
